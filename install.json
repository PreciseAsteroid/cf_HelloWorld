{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "head": [{
        "type": "script",
        "src": "./src/util.js"
      },
      {
        "type": "script",
        "src": "./src/app.js"
      },
      {
        "type": "style",
        "src": "./src/app.css"
      }
    ],
    "body": [

    ]
  },
  "preview": {
    "handlers": [{
      "options": ["*"],
      "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
    }]
  },
  "options": {
    "properties": {
      "enabled": {
        "type": "boolean",
        "title": "Popup Enabled",
        "default": true
      },

      "enableHeader": {
        "type": "boolean",
        "title": "Enable Header Text",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "header": {
        "type": "object",
        "title": "Header Details",
        "showIf": {
          "enableHeader": true,
          "enabled": true
        },
        "properties": {
          "headerTextDetails": {
            "type": "object",
            "title": "Header Text Details",
            "properties": {
              "headerText": {
                "default": "Use a Catching Title!",
                "title": "Header Text String",
                "type": "string"
              },
              "headerFontSize": {
                "title": "Header Font Size",
                "type": "integer",
                "default": 38,
                "minimum": 15,
                "maximum": 100
              },
              "headerFontFamily": {
                "description": "Place the requested font family",
                "title": "Header Font Family",
                "type": "string",
                "format": "string",
                "default": "Helvetica"

              },
              "headerTextColor": {
                "default": "#f38020",
                "format": "color",
                "title": "Header Text Color",
                "type": "string"
              }

            }
          }
        }
      },

      "enableBody": {
        "type": "boolean",
        "title": "Enable Body Text",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "body": {
        "type": "object",
        "title": "Body Details",
        "showIf": {
          "enableBody": true,
          "enabled": true

        },
        "properties": {
          "bodyTextDetails": {
            "type": "object",
            "title": "Body Text Details",
            "properties": {
              "bodyText": {
                "default": "Offer your users something to keep them in the website",
                "title": "Body Text String",
                "type": "string"
              },
              "bodyFontSize": {
                "title": "Body Font Size",
                "type": "integer",
                "default": 22,
                "minimum": 15,
                "maximum": 50
              },
              "bodyTextColor": {
                "default": "#000000",
                "format": "color",
                "title": "Body Text Color",
                "type": "string"
              },
              "bodyFontFamily": {
                "description": "Place the requested font family.",
                "title": "Body Font Family",
                "type": "string",
                "format": "string",
                "default": "Helvetica"
              }
            }
          }
        }
      },

      "enable_button": {
        "type": "boolean",
        "title": "Enable Button",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "btn": {
        "type": "object",
        "title": "Button Details",
        "showIf": {
          "enable_button": true,
          "enabled": true

        },
        "properties": {
          "btnTextDetails": {
            "type": "object",
            "title": "Button Text",
            "properties": {
              "btnText": {
                "default": "Get it! (??)",
                "title": "Button Text String",
                "type": "string"
              },
              "btnFontSize": {
                "description": "Min 1, Max 30",
                "title": "Button Font Size",
                "type": "integer",
                "default": 30,
                "minimum": 15,
                "maximum": 50
              },
              "btnTextColor": {
                "default": "#ffffff",
                "format": "color",
                "title": "Button Text Color",
                "type": "string"
              },
              "btnFontFamily": {
                "description": "Place the requested font family.",
                "title": "Button Font Family",
                "type": "string",
                "format": "string",
                "default": "Helvetica"

              }

            }
          },
          "btnColor": {
            "default": "#f38020",
            "format": "color",
            "title": "Button Color (backround)",
            "type": "string"
          },
          "btnLink": {
            "description": "URL to jump to (complete path with https:// or https://)",
            "title": "Link",
            "type": "string",
            "format": "string",
            "default": "http://BIBIB.NET"
          },
          "btnLinkNewTab": {
            "description": "Open link in new tab",
            "title": "Open in new tab",
            "type": "boolean",
            "default": true
          }
        }
      },

      "enableCloseBtn": {
        "type": "boolean",
        "title": "Enable Close Button",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "closeBtn": {
        "type": "object",
        "title": "Close Button Details",
        "showIf": {
          "enableCloseBtn": true,
          "enabled": true

        },
        "properties": {
          "closeBtnDetails": {
            "type": "object",
            "title": "Close Button Details",
            "properties": {
              "CloseBtnFontSize": {
                "description": "Min 1, Max 30",
                "title": "Button Font Size",
                "type": "integer",
                "default": 40,
                "minimum": 15,
                "maximum": 100
              },
              "CloseBtnFontColor": {
                "default": "#000000",
                "format": "color",
                "title": "Close Button Color",
                "type": "string"
              }
            }
          }
        }
      },

      "whenPopup": {
        "type": "boolean",
        "title": "Popup Frequencies",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "frequnciesDetails":{
        "type": "object",
        "title": "Frequencies",
        "showIf":{
          "whenPopup": true,
          "enabled": true
        },
        "properties":{
            "frequencies": {
              "title": "Show popup..",
              "showIf": {
                "whenPopup": true
              },
              "type": "string",
              "enum": [
                "once",
                "session",
                "every",
                "never",
                "always"
              ],
              "enumNames": {
                "session": "Once every session",
                "once": "Only once",
                "every": "Once every...",
                "never": "Never (hold)",
                "always": "Always (use for design purposes ONLY!)"
              }
            },
            "frequencyNumber": {
              "title": "Number",
              "showIf": {
                "frequnciesDetails.frequencies": "every"
              },
              "type": "integer",
              "minimum": 1,
              "maximum": 30
            },
            "frequencyPeriod": {
              "title": "Period",
              "showIf": {
                "frequnciesDetails.frequencies": "every"
              },
              "type": "string",
              "enum": [
                "days",
                "months"
              ],
              "enumNames": {
                "days": "Days",
                "months": "Months"
              }
            }
          }
        },
      "enableImage": {
        "type": "boolean",
        "title": "Show Image",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "mainImageDetails": {
        "type": "object",
        "title": "Main Image Details",
        "showIf": {
          "enableImage": true,
          "enabled": true

        },
        "properties": {
          "mainImage": {
            "default": "https://toptab.net/exit-popup/420X268.png",
            "description": "Main popup image.",
            "title": "Main Image",
            "type": "string",
            "format": "image"
          }
        }

      },

      "showGeneralDesignSettings": {
        "type": "boolean",
        "title": "Show General Desing Settings",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "generalDesignSettings": {
        "type": "object",
        "title": "General Desing Settings",
        "showIf": {
          "showGeneralDesignSettings": true
        },
        "properties": {
          "popupBackgroundColor": {
            "default": "#ffffff",
            "format": "color",
            "title": "Popup Background Color",
            "type": "string"
          },
          "origSiteBackgroundOpac": {
            "title": "Orignal Site Background Opacity",
            "type": "number",
            "format": "slider",
            "default": 0.7,
            "minimum": 0,
            "maximum": 1,
            "step": 0.1
          }
        }
      }

    }
  }

}
