{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "head": [{
        "type": "script",
        "src": "./src/util.js"
      },
      {
        "type": "script",
        "src": "./src/app.js"
      },
      {
        "type": "style",
        "src": "./src/app.css"
      }
    ],
    "body": [

    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
},
  "options": {
    "properties": {
      "enabled": {
        "type": "boolean",
        "title": "Popup Enabled",
        "default": true
      },

      "enableHeader": {
        "type": "boolean",
        "title": "Enable Header Text",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "header": {
        "type": "object",
        "title": "Header Details",
        "showIf": {
          "enableHeader": true
        },
        "properties": {
          "headerTextDetails": {
            "type": "object",
            "title": "Header Text Details",
            "properties": {
              "headerText": {
                "default": "Leaving Already?",
                "title": "Header Text String",
                "type": "string"
              },
              "HeaderFontSize": {
                "title": "Header Font Size",
                "type": "integer",
                "default": 50,
                "minimum": 15,
                "maximum": 100
              },
              "headerFontFamily": {
                "description": "Place the requested font family",
                "title": "Header Font Family",
                "type": "string",
                "format": "string",
                "default": "Helvetica"

              },
              "headerTextColor": {
                "default": "#000000",
                "format": "color",
                "title": "Header Text Color",
                "type": "string"
              }

            }
            }
          }
      },

      "enableBody": {
        "type": "boolean",
        "title": "Enable Body Text",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "body": {
        "type": "object",
        "title": "Body Details",
        "showIf": {
          "enableBody": true
        },
        "properties": {
          "bodyTextDetails": {
            "type": "object",
            "title": "Body Text Details",
            "properties": {
              "bodyText": {
                "default": "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
                "title": "Body Text String",
                "type": "string"
              },
              "bodyFontSize": {
                "title": "Body Font Size",
                "type": "integer",
                "default": 35,
                "minimum": 15,
                "maximum": 50
              },
              "bodyTextColor": {
                "default": "#000000",
                "format": "color",
                "title": "Body Text Color",
                "type": "string"
              },
              "bodyFontFamily": {
                "description": "Place the requested font family.",
                "title": "Body Font Family",
                "type": "string",
                "format": "string",
                "default": "Helvetica"
              }
            }
            }
          }
      },

      "enable_button": {
        "type": "boolean",
        "title": "Enable Button",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "btn": {
        "type": "object",
        "title": "Button Details",
        "showIf": {
          "enable_button": true
        },
        "properties": {
          "btnTextDetails": {
            "type": "object",
            "title": "Button Text",
            "properties": {
              "btnText": {
                "default": "Take me there!",
                "title": "Button Text String",
                "type": "string"
              },
              "btnFontSize": {
                "description": "Min 1, Max 30",
                "title": "Button Font Size",
                "type": "integer",
                "default": 30,
                "minimum": 15,
                "maximum": 50
              },
              "btnTextColor": {
                "default": "#ffffff",
                "format": "color",
                "title": "Button Text Color",
                "type": "string"
              },
              "btnColor": {
                "default": "#2e9f3c",
                "format": "color",
                "title": "Button Color (backround)",
                "type": "string"
              },
              "btnFontFamily": {
                "description": "Place the requested font family.",
                "title": "Button Font Family",
                "type": "string",
                "format": "string",
                "default": "Helvetica"

              },
              "btnLink": {
                "description": "URL to jump to",
                "title": "Link",
                "type": "string",
                "format": "string",
                "default": "http://BIBIB.NET"
              },
              "btnLinkNewTab": {
                "description": "Open link in new tab",
                "title": "Open in new tab",
                "type": "boolean",
                "default": true
              }
            }
            }
          }
      },

      "enable_close_button": {
        "type": "boolean",
        "title": "Enable Close Button",
        "default": true,
        "showIf": {
          "enabled": true
        }
      },
      "closeBtn": {
        "type": "object",
        "title": "Button Details",
        "showIf": {
          "enable_close_button": true
        },
        "properties": {
          "closeBtnDetails": {
            "type": "object",
            "title": "Close Button Details",
            "properties": {
              "CloseBtnFontSize": {
                "description": "Min 1, Max 30",
                "title": "Button Font Size",
                "type": "integer",
                "default": 40,
                "minimum": 15,
                "maximum": 100
              },
              "CloseBtnFontColor": {
                "default": "#000000",
                "format": "color",
                "title": "Close Button Color",
                "type": "string"
              }
            }
            }
          }
      },

      "show_popup": {
        "type": "boolean",
        "title": "Popup frequencies",
        "default": false
      },
      "frequencies": {
        "showIf": {
          "show_popup": true
        },
        "type": "string",
        "format": "radios",
        "enum": [
          "session",
          "once",
          "every"

        ],
        "enumNames": {
          "session": "Once every session",
          "once": "Only once",
          "every": "Once every"
        }
      },
      "number": {
        "showIf": {
          "frequencies": "every"
        },
        "type": "integer",
        "minimum": 1,
        "maximum": 30
      },
      "period": {
        "showIf": {
          "frequencies": "every"
        },
        "type": "string",
        "enum": [
          "days",
          "months"
        ],
        "enumNames": {
          "days": "Days",
          "months": "Months"
        }
      },
      "mainImage": {
        "default": "http://toptab.net/exit-popup/420X268.png",
        "description": "Main popup image.",
        "title": "Main image",
        "type": "string",
        "format": "image"
      },
      "themeColor": {
        "default": "#000000",
        "format": "color",
        "title": "Theme Color Example",
        "type": "string"
      },

      "origSiteBackgroundOpac": {
        "title": "Orignal Site Background Opacity",
        "description": "From 0 to 1 in 0.1 steps",
        "type": "number",
        "format": "slider",
        "default": 0.3,
        "minimum": 0,
        "maximum": 1,
        "step": 0.1
      }

    }
  }

}
