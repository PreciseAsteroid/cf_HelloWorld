{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "head": [{
        "type": "script",
        "src": "./src/util.js"
      },
      {
          "type": "script",
          "src": "./src/app.js"
        },
      {
        "type": "style",
        "src": "./src/app.css"
      }
    ],
    "body": [

    ]
  },
  "options": {
    "properties": {
      "endabled": {
        "type": "boolean",
        "title": "Popup Enabled",
        "default": true
      },
      "header": {
        "type": "string",
        "title": "Header Text",
        "default": "Leaving Already?"
      },
      "body": {
        "type": "string",
        "title": "body Text",
        "default": "Lorem ipsum dolor sit amet, phaedrum disputando ne per. Suavitate molestiae id eam, tota saepe vel id, vivendo nominavi imperdiet nam at. Fabulas adipisci hendrerit ut his, ut vis velit volutpat dignissim. Omnes altera corpora te pri."
      },
      "show_popup": {
        "type": "boolean",
        "title": "Popup frequencies",
        "default": false
      },
      "frequencies": {
        "showIf": {
          "show_popup": true
        },
        "type": "string",
        "format": "radios",
        "enum": [
          "session",
          "once",
          "every"

        ],
        "enumNames": {
          "session": "Once every session",
          "once": "Only once",
          "every": "Once every"
        }
      },
      "number":{
        "showIf": {
          "frequencies": "every"
        },
        "type": "integer"
      },
      "period":{
        "showIf": {
          "frequencies": "every"
        },
        "type": "string",
        "enum": [
          "days",
          "months"
        ],
        "enumNames": {
          "days": "Days",
          "months": "Months"
        }
      },
      "mainImage": {
          "default": "./media/main.jpg",
          "description": "Main popup image.",
          "title": "Main image",
          "order": 0,
          "type": "string",
          "format": "image"
        }

    }
  }

}
