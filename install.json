{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "head": [{
        "type": "script",
        "src": "./src/util.js"
      },
      {
        "type": "script",
        "src": "./src/app.js"
      },
      {
        "type": "style",
        "src": "./src/app.css"
      }
    ],
    "body": [

    ]
  },
  "options": {
    "properties": {
      "endabled": {
        "type": "boolean",
        "title": "Popup Enabled",
        "default": true
      },
      "header": {
        "type": "string",
        "title": "Header Text",
        "default": "Leaving Already?"
      },
      "body": {
        "type": "string",
        "title": "body Text",
        "default": "Lorem ipsum dolor sit amet, phaedrum disputando ne per. Suavitate molestiae id eam, tota saepe vel id, vivendo nominavi imperdiet nam at. Fabulas adipisci hendrerit ut his, ut vis velit volutpat dignissim. Omnes altera corpora te pri."
      },
      "show_popup": {
        "type": "boolean",
        "title": "Popup frequencies",
        "default": false
      },
      "frequencies": {
        "showIf": {
          "show_popup": true
        },
        "type": "string",
        "format": "radios",
        "enum": [
          "session",
          "once",
          "every"

        ],
        "enumNames": {
          "session": "Once every session",
          "once": "Only once",
          "every": "Once every"
        }
      },
      "number": {
        "showIf": {
          "frequencies": "every"
        },
        "type": "integer",
        "minimum": 1,
        "maximum": 30
      },
      "period": {
        "showIf": {
          "frequencies": "every"
        },
        "type": "string",
        "enum": [
          "days",
          "months"
        ],
        "enumNames": {
          "days": "Days",
          "months": "Months"
        }
      },
      "mainImage": {
        "default": "https://www.siteground.com/blog/wp-content/uploads/2017/02/Cloudflare-HTTPS-WAF-update.jpg",
        "description": "Main popup image.",
        "title": "Main image",
        "type": "string",
        "format": "image"
      },
      "themeColor": {
        "default": "#000000",
        "format": "color",
        "title": "Theme Color Example",
        "type": "string"
      },
      "enable_button": {
        "type": "boolean",
        "title": "Enable Button",
        "default": true
      },
      "btnText": {
        "showIf": {
          "enable_button": true
        },
        "default": "Take me there!",
        "title": "Button Text",
        "type": "string"
      },
      "btnColor": {
        "showIf": {
          "enable_button": true
        },
        "default": "#2e9f3c",
        "format": "color",
        "title": "Button Color Example",
        "type": "string"
      },
      "btnFontSize": {
        "showIf": {
          "enable_button": true
        },
        "description": "Min 1, Max 30",
        "title": "Button Font Size",
        "type": "integer",
        "default": 30,
        "minimum": 15,
        "maximum": 50
      },
      "btnFontFamily": {
        "showIf": {
          "enable_button": true
        },
        "description": "Place the requested font family. It will be used only in case it is available. The default is Palatino Linotype, Book Antiqua, Palatino, serif",
        "title": "Button Font Family",
        "type": "string",
        "format": "string"

      },
      "btnLink": {
        "showIf": {
          "enable_button": true
        },
        "description": "URL to jump to",
        "title": "Link",
        "type": "string",
        "format": "string",
        "default":"http://BIBIB.NET"
      },
      "btnLinkNewTab": {
        "showIf": {
          "enable_button": true
        },
        "description": "Open link in new tab",
        "title": "Open in new tab",
        "type": "boolean",
        "default": true

      }


    }
  }

}
