{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "head": [{
        "type": "script",
        "src": "./src/util.js"
      },
      {
        "type": "script",
        "src": "./src/app.js"
      },
      {
        "type": "style",
        "src": "./src/app.css"
      }
    ],
    "body": [

    ]
  },
  "options": {
    "properties": {
      "endabled": {
        "type": "boolean",
        "title": "Popup Enabled",
        "default": true
      },
      "header": {
        "type": "string",
        "title": "Header Text",
        "default": "Leaving Already?"
      },
      "body": {
        "type": "string",
        "title": "body Text",
        "default": "Lorem ipsum dolor sit amet, phaedrum disputando ne per. Suavitate molestiae id eam, tota saepe vel id, vivendo nominavi imperdiet nam at. Fabulas adipisci hendrerit ut his, ut vis velit volutpat dignissim. Omnes altera corpora te pri."
      },
      "show_popup": {
        "type": "boolean",
        "title": "Popup frequencies",
        "default": false
      },
      "frequencies": {
        "showIf": {
          "show_popup": true
        },
        "type": "string",
        "format": "radios",
        "enum": [
          "session",
          "once",
          "every"

        ],
        "enumNames": {
          "session": "Once every session",
          "once": "Only once",
          "every": "Once every"
        }
      },
      "number": {
        "showIf": {
          "frequencies": "every"
        },
        "type": "integer",
        "minimum": 1,
        "maximum": 30
      },
      "period": {
        "showIf": {
          "frequencies": "every"
        },
        "type": "string",
        "enum": [
          "days",
          "months"
        ],
        "enumNames": {
          "days": "Days",
          "months": "Months"
        }
      },
      "mainImage": {
        "default": "http://toptab.net/exit-popup/420X268.png",
        "description": "Main popup image.",
        "title": "Main image",
        "type": "string",
        "format": "image"
      },
      "themeColor": {
        "default": "#000000",
        "format": "color",
        "title": "Theme Color Example",
        "type": "string"
      },
      "enable_button": {
        "type": "boolean",
        "title": "Enable Button",
        "default": true
      },
      "btn": {
        "type": "object",
        "title": "Button Details",
        "showIf": {
          "enable_button": true
        },
        "properties": {
          "btnTextDetails": {
            "type": "object",
            "title": "Button Text",
            "properties": {
              "btnText": {
                "default": "Take me there!",
                "title": "Button Text String",
                "type": "string"
              },
              "btnFontSize": {
                "description": "Min 1, Max 30",
                "title": "Button Font Size",
                "type": "integer",
                "default": 30,
                "minimum": 15,
                "maximum": 50
              },
              "btnTextColor": {
                "default": "#2e9f3c",
                "format": "color",
                "title": "Button Text Color",
                "type": "string"
              }
            }
          },

          "btnColor": {
            "default": "#2e9f3c",
            "format": "color",
            "title": "Button Color (backround)",
            "type": "string"
          },
          "btnFontFamily": {
            "description": "Place the requested font family. It will be used only in case it is available. The default is Palatino Linotype, Book Antiqua, Palatino, serif",
            "title": "Button Font Family",
            "type": "string",
            "format": "string"

          },
          "btnLink": {
            "description": "URL to jump to",
            "title": "Link",
            "type": "string",
            "format": "string",
            "default": "http://BIBIB.NET"
          },
          "btnLinkNewTab": {
            "description": "Open link in new tab",
            "title": "Open in new tab",
            "type": "boolean",
            "default": true
          }
        }
      },
      "origSiteBackgroundOpac": {

      "title": "Orignal Site Background Opacity",
      "description": "From 0 to 1 in 0.1 steps",
      "type": "number",
      "format": "slider",
      "default": 0.3,
      "minimum": 0,
      "maximum": 1,
      "step": 0.1
      }

    }
  }

}
